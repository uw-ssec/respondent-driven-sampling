{
  "title": "Homelessness Experience Survey",
  "pages": [
    {
      "name": "volunteer-pre-screen",
      "title": "Pre-Screening Questions - Volunteer Only",
      "elements": [
        {
          "type": "html",
          "name": "question3",
          "html": "<div style=\"background-color: #fff3cd; padding: 10px; margin: 10px 0;\"><strong>Instructions:</strong> These questions are for volunteers only. Please do not ask the respondent.</div>"
        },
        {
          "type": "dropdown",
          "name": "location",
          "title": "Please select location:",
          "isRequired": true,
          "choicesByUrl": {
            "url": "/api/locations",
            "path": "data",
            "valueName": "_id",
            "titleName": "hubName"
          },
          "showNoneItem": true
        }
      ]
    },
    {
      "name": "qualtrics-survey",
      "title": "Main Survey",
      "elements": [
        {
          "type": "html",
          "name": "qualtrics-instruction",
          "html": "<div style=\"background-color: #e8f4fd; padding: 15px; margin-bottom: 20px; border-radius: 8px;\"><strong>Instructions:</strong> Please complete the survey below. When finished, click the \"Continue to Next Section\" button at the bottom.</div>"
        },
        {
          "type": "qualtrics",
          "name": "qualtrics_embed",
          "title": "Complete the survey below:"
        }
      ]
    },
    {
      "name": "giftCards",
      "title": "Gift Cards",
      "elements": [
        {
          "type": "checkbox",
          "name": "email_phone_consent",
          "title": "Do you consent to receive your gift cards via SMS or email?",
          "choices": [
            {
              "value": "email",
              "text": "Email address"
            },
            {
              "value": "phone",
              "text": "Phone number"
            }
          ],
          "showNoneItem": true
        },
        {
          "type": "text",
          "name": "email",
          "visibleIf": "{email_phone_consent} contains 'email'",
          "title": "What's your email address?",
          "inputType": "email"
        },
        {
          "type": "text",
          "name": "phone",
          "visibleIf": "{email_phone_consent} contains 'phone'",
          "title": "What's your phone number?",
          "inputType": "tel"
        }
      ]
    }
  ],
  "showQuestionNumbers": "off",
  "completeText": "Submit Survey",
  "showProgressBar": "top",
  "progressBarType": "pages"
}
